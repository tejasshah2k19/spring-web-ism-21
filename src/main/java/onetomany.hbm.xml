<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">



<hibernate-mapping>
	<class name="com.entity.onetomany.CustomerEntity"
		table="customers">
		<id name="customerId">
			<generator class="increment"></generator>
		</id>
		<property name="firstName"></property>

		<list name="orders" cascade="all">
			<key column="customerId"></key>
			<list-index column="myindex"></list-index>
			<one-to-many class="com.entity.onetomany.OrderEntity" />
		</list>

	</class>

	<class name="com.entity.onetomany.OrderEntity" table="orders">
		<id name="orderId">
			<generator class="increment">
			</generator>
		</id>
		<property name="totalAmount"></property>
		<property name="title"></property>

	</class>
</hibernate-mapping>